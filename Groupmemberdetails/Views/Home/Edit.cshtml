@model Details;


@if (Model != null)
{
    @section title {
        <h3>Update @Model.Name's details</h3>
    }

    <form method="post" asp-controller="home" asp-action="edit">
        <input type="hidden" asp-for="IndexNo" />
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Email" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="email" asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Age" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="number" asp-for="Age" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            <div class="col-6">
            </div>
        </div>
    </form>
}
